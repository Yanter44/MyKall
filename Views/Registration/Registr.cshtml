@model Registr
@{
    ViewData["Title"] = "Registr";
}
<head>
    <link rel="stylesheet" href="~/css/RegisterForm.css" />
</head>
<div>
    <h1 class="display-4">Registration</h1>
</div>
<body>

    <form method="post" asp-controller="Home" asp-action="CheckLogging">
        <p asp-for="Login">Login</p>
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>

        <p asp-for="Password">Password</p>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <div class="button-container">
            <input type="Submit" value="Отправить" class="buttonnew" />
        </div>
    </form>
</body>